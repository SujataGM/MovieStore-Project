@model ASP.NETAssignmentMovieStore.Models.ViewModels.MoviesEditViewModel
@{
    ViewData["Title"] = "Edit";
    var photoPath = (Model.ExistingCoverImageURL ?? "noimage.jpg");
}

<h1>Edit Movies</h1>
<div class="text-end">
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
<hr />
<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ExistingCoverImageURL" />
            <div class="row">
                <div class="col-md-4 border-1">
                    <div>
                        <img src="~/@photoPath" asp-append-version="true" height="300px" width="250px;" />
                    </div>
                    <div class="form-group row">
                        <div class="custom-file">
                            <input name="CoverMovieImage" type="file" class="form-group custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile"></label>
                        </div>
                        @*<span asp-validation-for="CoverMovieImage" class="text-danger"></span>*@
                    </div>
                </div>
                <div class="col-md-8 border-2">
                    <div class="row mb-3 form-group">
                        <label asp-for="Title" class="col-sm-4 col-form-label">Title</label>
                        <div class="col-sm-8">
                            <input asp-for="Title" class="form-control">
                        </div>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="row mb-3 form-group">
                        <label asp-for="Director" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Director" class="form-control" />
                        </div>
                        <span asp-validation-for="Director" class="text-danger"></span>
                    </div>
                    <div class="row mb-3 form-group">
                        <label asp-for="ReleaseYear" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="ReleaseYear" class="form-control" />
                        </div>
                        <span asp-validation-for="ReleaseYear" class="text-danger"></span>
                    </div>
                    <div class="row mb-3 form-group">
                        <label asp-for="Price" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Price" class="form-control" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="row mb-3 form-group">
                        <label asp-for="Category" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Category" class="form-control" />
                        </div>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="row mb-3 form-group">
                        <label asp-for="Description" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Description" class="form-control" />
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="row mb-3 form-group">
                        <label asp-for="MovieTime" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="MovieTime" class="form-control" />
                        </div>
                        <span asp-validation-for="MovieTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            $(document).ready(function () {
                $(".custom-file-input").on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next(".custom-file-input").html(fileName);
                });
            });
        </script>
    }
    }

