@model IEnumerable<ASP.NETAssignmentMovieStore.Models.Movies>

@{
    ViewData["Title"] = "Index";
}

<div class="container" >
    <div class="row pt-4">
        <div class="col-6">
            <h1>Movies List</h1>
        </div>
        <div class="col-4 text-end">
            <a asp-controller="Movie" asp-action="Create" class="btn btn-primary text-end"><i class="bi bi-plus-circle-fill"></i>&nbsp;Create New Movie</a>
        </div>
    </div>
    <hr /> 
    
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col-12 col-md-6 col-lg-3">
                    <partial name="_MovieListPartial" model="item">
                </div>
            }
        </div>
   
</div>

