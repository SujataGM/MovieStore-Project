@*@model ASP.NETAssignmentMovieStore.Models.Movies
*@
@{
    <div class="card" style="width: 100%; height: 100%;font-size:12px; margin-right:4px;">
        <img src="~/@(Model.CoverImageURL ?? "noimage.jpg")" class="card-img-top" alt="Movie Image" style="padding:1px; object-fit: cover; height: 250px;">
        <div class="card-body d-flex flex-column align-items-start">
            <h5 class="card-title" style="color: #234E70"><b>@Model.Title</b></h5>
            <p style="color:#7A2048;">
                <b>Director</b> :@Model.Director <br />
                <b>Year   </b>  :@Model.ReleaseYear <br />
                <b>Price  </b>  :@Model.Price
            </p>
            <a asp-controller="Movie" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-primary d-inline-block mt-auto"><i class="bi bi-cart-plus-fill"></i> &nbsp;&nbsp;Add To Cart</a>

        </div>
    </div>
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">

    $('.card').hover(
        function () {
            $(this).animate(
                {
                    marginTop: "-=2%",
                    marginBottom: "+=2%",
                    marginLeft: "-=2%",
                    marginRight: "+=2%"
                }, 20)
        },
        function () {
            $(this).animate(
                {
                    marginTop: "+=2%",
                    marginBottom: "-=2%",
                    marginLeft: "+=2%",
                    marginRight: "-=2%"
                })
        });

