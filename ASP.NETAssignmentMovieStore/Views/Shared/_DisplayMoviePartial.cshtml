@model ASP.NETAssignmentMovieStore.Models.Movies

@{
           <div class="card m-3" style="min-width:18rem;max-width:25%;margin:10px;border: 2px solid">
            <div class="card-header" style="background-color:darksalmon">
                <h3>@Model.Title</h3>
            </div>
            <div class="card-body">
                <img class="card-img-top imageThumbnail" src="~/@(Model.CoverImageURL ?? "noimage.jpg")" asp-append-version="true" />
                <div class="card-footer text-center">
                    <p>Director : @Model.Director</p> 
                    <p>Year     : @Model.ReleaseYear</p> 
                    <p>Price    : @Model.Price</p>
                </div>
                <a asp-controller="Movie" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="Movie" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Details</a>
                <a asp-controller="Movie" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    
}
