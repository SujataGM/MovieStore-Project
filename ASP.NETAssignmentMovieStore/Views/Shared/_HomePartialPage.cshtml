@model ASP.NETAssignmentMovieStore.Models.Movies

@{
    <div class="col-sm-3">
        <div class="card m-3" style="min-width:18rem;max-width:26%">
            <div class="card-header">
                <h3>@Model.Title</h3>
            </div>
            <div class="card-body">
                <img class="card-img-top imageThumbnail" src="~/@(Model.CoverImageURL ?? "noimage.jpg")" asp-append-version="true" />
                <div class="card-footer text-center">
                    <a>Director : @Model.Director</a>
                    <a>Year     : @Model.ReleaseYear</a>
                    <a>Price    : @Model.Price</a>
                </div>
                <a asp-controller="Movie" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-primary">Add to Cart</a>
                <a asp-controller="Movie" asp-action="DeleteFromTheCart" asp-route-id="@Model.Id" class="btn btn-primary">Delete From The Cart</a>

            </div>
        </div>
    </div>
}

